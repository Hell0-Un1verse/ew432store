<div class="alert alert-primary" role="alert">
 <h1>We have <%= @products.count%> products and counting! </h1>
</div>


 
<div class="row row-cols-1 row-cols-md-4"> 
  <% @products.each do |product| %><div class="card-group">
  <div class="col mb-4"> 
    <div class="card"> 
      <%=image_tag product.image, class:"card-img-top rounded mx-auto d-block" %> 
      <div class="card-body">
        <h5 class="card-title"><%=product.name%></h5>
        <p class="card-text">Price: <%=product.price%> <br><%=product.description%> <br>Stock: <%=product.stock%></p>
         <%= link_to "Add to Cart", buy_path(product), class: "btn btn-primary"%>
      </div>
    </div>
  </div>
</div>
<% end %>
